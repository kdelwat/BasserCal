<div class="page-header">
	<h1 class="title">The week ahead</h1>

	<a class="button is-primary" href="/events/new">
		<span>Add event</span>
		<span class="icon">
			<i class="fa fa-plus-circle"></i>
		</span>
	</a>
</div>

<div class="week">
	<div class="calendar is-large">
		<div class="calendar-container">
			<div class="calendar-header">
				{{#each events}}
				<div class="calendar-date">{{this.dayOfWeek}}</div>
				{{/each}}
			</div>

			<div class="calendar-body">
				{{#each events}}
				<div class="calendar-date card">
					<button class="date-item">
						<span class="weekday">{{this.dayOfWeek}}&nbsp;</span>{{this.dayOfMonth}}</button>
					<div class="calendar-events">
						{{#each this.events}}
						<a href="/events/{{this.id}}/" class="calendar-event {{this.class}}">{{this.name}}</a>
						{{/each}}
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>