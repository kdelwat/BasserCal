<h1 class="title">Edit event</h1>

<form method="POST">
	<div class="field">
		<label for="name" class="label">Name</label>
		<div class="control">
			<input class="input" type="text" name="name" value="{{event.name}}">
		</div>
	</div>

	<div class="field">
		<label for="description" class="label">Description</label>
		<div class="control">
			<textarea class="textarea" name="description">{{event.description}}</textarea>
		</div>
	</div>

	<div class="field">
		<label for="date" class="label">Date</label>
		<div class="control">
			<input name="date" type="date" value="{{dateValue}}">
		</div>
	</div>

	<div class="field">
		<label for="time" class="label">Time</label>
		<div class="control">
			<input id="time" name="time" type="time" value="{{timeValue}}">
		</div>
	</div>

	<div class="portfolio">
		<label for="portfolio" class="label">Portfolio</label>
		<div class="control">
			<div class="select">
				<select name="portfolio">
					<option value="social">Social</option>
					<option value="communities">Communities</option>
					<option value="cultural">Cultural</option>
					<option value="sport">Sport</option>
				</select>
			</div>
		</div>
	</div>

	<div class="field">
		<div class="control">
			<input class="button is-link" type="submit">
		</div>
	</div>
</form>