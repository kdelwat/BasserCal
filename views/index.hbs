<h1 class="title">Basser this week...</h1>
<div class="calendar is-large">
	<div class="calendar-container">
		<div class="calendar-header">
			{{#each events}}
			<div class="calendar-date">{{this.dayOfWeek}}</div>
			{{/each}}
		</div>

		<div class="calendar-body">
			{{#each events}}
			<div class="calendar-date">
				<button class="date-item">{{this.dayOfMonth}}</button>
				<div class="calendar-events">
					{{#each this.events}}
					<a href="/events/{{this.id}}/" class="calendar-event">{{this.name}}</a>
					{{/each}}
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>

<a class="button is-primary" href="/events/new">Add event</a>